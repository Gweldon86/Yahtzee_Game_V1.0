        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ones_button" />

    <TextView
        android:id="@+id/fours_score"
        android:layout_width="45dp"
