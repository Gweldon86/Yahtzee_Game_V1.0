    <Button
        android:id="@+id/twos_button"
        style="@android:style/Widget.Button"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
